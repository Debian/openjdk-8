--- openjdk/jdk/make/common/shared/Compiler-gcc.gmk~	2011-04-20 16:32:34.131619829 +0200
+++ openjdk/jdk/make/common/shared/Compiler-gcc.gmk	2011-04-20 16:35:14.871856811 +0200
@@ -54,8 +54,8 @@
 ifeq ($(PLATFORM), linux)
 
   # Settings specific to Linux
-  CC             = $(COMPILER_PATH)gcc$(GCC_SUFFIX)
-  CPP            = $(COMPILER_PATH)gcc$(GCC_SUFFIX) -E
+  CC             = gcc$(GCC_SUFFIX)
+  CPP            = gcc$(GCC_SUFFIX) -E
   # statically link libstdc++ before C++ ABI is stablized on Linux
   ifneq ($(STATIC_CXX),false)
     STATIC_CXX     = true
@@ -64,9 +64,9 @@
     # g++ always dynamically links libstdc++, even we use "-Wl,-Bstatic -lstdc++"
     # We need to use gcc to statically link the C++ runtime. gcc and g++ use
     # the same subprocess to compile C++ files, so it is OK to build using gcc.
-    CXX            = $(COMPILER_PATH)gcc$(GCC_SUFFIX)
+    CXX            = gcc$(GCC_SUFFIX)
   else
-    CXX            = $(COMPILER_PATH)g++$(GCC_SUFFIX)
+    CXX            = g++$(GCC_SUFFIX)
   endif
   ifeq ($(ARCH), alpha)
     # alpha
